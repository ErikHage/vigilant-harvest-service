{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["es2022"],
    "target": "es2022",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  }
}
